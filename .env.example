# Database Configuration
# Set to 'true' to use Turso database (for production/testing)
USE_TURSO=false

# Turso Database Configuration
# Get these from your Turso dashboard after creating a database
TURSO_DATABASE_URL=libsql://your-database-name.turso.io
TURSO_AUTH_TOKEN=your-auth-token-here

# Set to true to initialize Turso tables (run once)
INIT_TURSO_DB=false